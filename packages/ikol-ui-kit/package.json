{
  "name": "ikol-ui-kit",
  "version": "0.0.1",
  "author": "IKOL",
  "license": "MIT",
  "description": "IKOL JavaScript Software Development Kit UI framework",
  "scripts": {
    "tsc": "vue-tsc --noEmit",
    "eslint": "eslint src/ tests/ --rulesdir ./tests/eslint/rules",
    "stylelint": "stylelint --config stylelint.config.js src/**/*.css",
    "lint": "concurrently 'npm:tsc' 'npm:eslint' 'npm:stylelint' --kill-others-on-fail",
    "lint:fix": "npm run eslint -- --fix",
    "storybook": "storybook dev -p 6006",
    "test": "jest",
    "test:clear": "jest --clearCache",
    "build": "npm run build:clean && vite build --config vite.config.js",
    "build:clean": "rm -rf lib/ dist/",
    "build:stories": "storybook build -o docs/dist/",
    "build:storybook": "storybook build -o docs/dist/",
    "new:component": "node ./dev/scripts/new-component.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filiprak/ikol-js-sdk.git",
    "directory": "packages/ikol-ui-kit"
  },
  "keywords": [
    "ikol"
  ],
  "bugs": {
    "url": "https://github.com/filiprak/ikol-js-sdk/issues"
  },
  "main": "./lib/index.mjs",
  "exports": {
    ".": "./lib/index.mjs",
    "./components/*": "./lib/components/*/index.mjs",
    "./composables": "./lib/composables/index.mjs",
    "./utils/*": "./lib/utils/*.mjs",
    "./styles": {
      "default": "./lib/styles/index.mjs"
    }
  },
  "types": "./lib/index.d.ts",
  "typesVersions": {
    "*": {
      "lib/index.mjs": [
        "lib/index.d.ts"
      ],
      "*": [
        "*",
        "lib/*.d.ts",
        "lib/*/index.d.ts"
      ]
    }
  },
  "peerDependencies": {
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.11",
    "@storybook/addon-interactions": "^7.0.11",
    "@storybook/addon-links": "^7.0.11",
    "@storybook/blocks": "^7.0.11",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@storybook/vue3": "^7.0.11",
    "@storybook/vue3-vite": "^7.0.11",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/vue3-jest": "^29.2.4",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-vue": "^9.10.0",
    "identity-obj-proxy": "^3.0.0",
    "inquirer": "^9.2.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "object-hash": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.20.2",
    "rollup-plugin-multi-input": "^1.4.1",
    "storybook": "^7.0.11",
    "stylelint": "^15.6.1",
    "stylelint-config-recommended": "^12.0.0",
    "ts-jest": "^29.1.0",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^2.2.0",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.2.0"
  }
}
